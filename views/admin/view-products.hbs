<section>
  <div class="container">
    <div class="row mt-2 "><a href="/admin/add-product" class="btn btn-success ml-auto ">Add products</a></div>
    <table class="table mt-2">
  <thead>
    <tr>
      <th scope="col">SL NO.</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width:50px;height:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
    </tr>
    {{/each}}
  </tbody>
</table>
  </div>
</section>